<!DOCTYPE html>
<html>
	<head>
		<title>Transcendence</title>
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<script type="template" id="userTemplate">
			<%%= name %>
		</script>
		<%= render 'templates/selectMode' %>
		<%= render 'templates/lobby' %>
		<%= render 'templates/game' %>

		<%= stylesheet_link_tag 'application', media: 'all' %>
		<%= javascript_pack_tag 'application' %>
	</head>

	<body>
		<nav>
			<a>Game</a>
			<a>Guild</a>
			<div>
				Session = <%= @session.inspect %> <br>
				<%= link_to "Sign in with 42", user_marvin_omniauth_authorize_path unless current_user %>
				<%= link_to "Sign out", destroy_user_session_path, method: :delete if current_user %>
			</div>
			<a id="account_link">Account</a>
		</nav>
		<aside id="contacts">
			<p>Contacts</p>
		</aside>
		<aside id="tchat">
			<p>Tchat</p>
		</aside>
		<%= yield %>
	</body>
</html>
