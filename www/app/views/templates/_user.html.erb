<script id="user-display" type="text/template">
	<div class="screen">
		<div id="avatar">
			<img id="avatar_profile" alt="<%%= login %> Profile Picture" />
		</div>

		<br />

		<div id="login">
			<label>login:</label>
			<div id="login_text"><%%= login %></div>
		</div>
		<div id="username">
			<label>Username:</label>
			<div id="username_text"><%%= username %></div>
		</div>
		<div id="email">
			<label>Email:</label>
			<div id="email_text"><%%= email %></div>
		</div>
		<div id="otp">
			<div id="boutton_show"><%%= otp_required_for_login?
				'<button type="button" class="tfa-enable-btn">Disable TFA</button>'
				: '<button type="button" class="tfa-disable-btn">Enable TFA</button>'
			  %>
			</div>
		</div>

		<br />

		<div id="boutton_show">
			<button type="button" class="edit-btn">Edit Profil</button>
		</div>
	</div>

</script>

<script id="user-modify" type="text/template">

	<div id="errorPopUp"></div>
	<div class="screen-top header-user">
		<h1>Modification utilisateur</h1>
	</div>

	<div class="screen">
		<form id="updateUserForm" name="updateuserform">
			<div id="avatar" class="field">
				<img id="avatar_profile" alt="<%%= login %> Profile Picture" /></br>
				<span class="file-input btn btn-block btn-primary btn-file">
					<input class="custom-file-input" type="file" name="Select image" accept="image/*" >
				</span>
			</div>
			<div id="username-edit" class="field" style="padding: 1em;">
				<label id="text-username" for="username">Username:</label>
				<input type="text" id="username" name="username" placeholder="Username" value="<%%= username %>" required >
			</div>
			<div id="formSubmitUpdateUser" class="actions" style="padding: 1em;">
				<div id="boutton_show">
					<input type="submit" value="update" />
				</div>
			</div>
		</form>
		<div id="boutton_show">
			<button type="button" class="back-btn">back</button>
		</div>
	</div>

</script>

<script id="user-create" type="text/template">

	<div id="errorPopUp"></div>

	<div class="screen-top header-user">
		<h1>Cr√©ation utilisateur</h1>
	</div>

	<div class="screen">
		<form id="newUserForm" name="newuserform">
			<div id="avatar" class="field">
				<img id="avatar_profile" src="<%%= pictures %>" alt="<%%= login%> Profile Picture" /></br>
				<span class="file-input btn btn-block btn-primary btn-file">
					<input class="custom-file-input" type="file" name="Select image" accept="image/*" >
				</span>
			</div>
			<div id="name" class="field" style="padding: 1em;">
				<label id="text-username" for="username">Username:</label>
				<input type="text" id="username" name="username" placeholder="Username" required>
			</div>
			<div id="formSubmitCreateUser" class="actions" style="padding: 1em;">
				<div id="boutton_show">
					<input type="submit" value="Create User" />
				</div>
			</div>
		</form>
	</div>

</script>

<script id="user-tfa" type="text/template">
	<div class="screen">

		<div id="login">
			<label>Code OTP:</label>
			<div id="login_text"><%%= otp_secret %></div>
		</div>
		<form id="newOtpForm" name="two_fa">
			<div id="name" class="field" style="padding: 1em;">
				<label id="text-username" for="code">Code:</label>
				<input type="text" id="code" name="code" placeholder="Code" required>
			</div>
			<div id="formSubmitEnableOtp" class="actions" style="padding: 1em;">
				<div id="boutton_show">
					<input type="submit" value="Confirm and Enable OTP" />
				</div>
			</div>
		</form>
	</div>

</script>

<script id="user-tfa-disable" type="text/template">
	<div class="screen">
		<div id="boutton_show">
			<button type="button" class="disable-btn">Confirm and disable OTP</button>
		</div>
	</div>

</script>
