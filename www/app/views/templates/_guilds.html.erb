<!-- Template for all guilds -->
<script id="guildNewButton" type="text/template">
	<a class="button" href="#guilds/new"><div>Create your own Guild !</div></a>
</script>

<script id="guildRow" type="text/template">
	<div class="<%% if (my_guild == true) { %>myGuildRow<%% } else { %>guildRow<%% } %> cursorButton" data-href="<%%= route %>">
		<div>
			<p class="uppercase">Rank</p>
			<p><%%= rank %></p>
		</div>
		<div class="uppercase"><%%= name %> (<%%= anagram %>)</div>
		<div>
			<p class="uppercase">Owner</p>
			<p><%%= owner_name %></p>
		</div>
		<div>
			<p class="uppercase">Score<p>
			<p><%%= score %></p>
		</div>
	</div>
</script>

<!-- Template for specific guild view -->
<script id="mainGuildButtonTemplate" type="text/template">
	<div id="mainGuildButton" class="button">
		<span id=<%%= id %>><%%= name %></span>
	</div>
</script>

<script id="guildFiguresTemplate" type="text/template">
	<div class="uppercase" id="guildName"><%%= name %> (<%%= anagram %>)</div>
	<div>
		<p class="uppercase">Rank</p>
		<p><%%= rank %></p>
	</div>
	<div>
		<p class="uppercase">Owner</p>
		<p><%%= owner_name %></p>
	</div>
	<div>
		<p class="uppercase">Active Members</p>
		<p><%%= active_members %></p>
	</div>
	<div>
		<p class="uppercase">Formed</p>
		<p><%%= created_at %></p>
	</div>
</script>

<!-- Template for listing guild members -->
<script id="guildMembersTemplate" type="text/template">
	<p class="bandeau">Guild members</p>
	<div id="guildMembersBody">
	</div>
</script>

<script id="guildMemberRowTemplate" type="text/template">
	<div class="guildMemberRow">
		<div>
			<p class="uppercase"><%%= username %></p>
			<p><%%= rank %></p>
		</div>
		<div>
			<p class="uppercase">MMR</p>
			<p><%%= mmr %></p>
		</div>
		<div>
			<p class="uppercase">Contribution</p>
			<p><%%= contribution %></p>
		</div>
	</div>
</script>

<script id="guildKickMemberTableData" type="text/template">
	<div id="<%%= kick %>" class="cursorButton">
		<img src="assets/kick_img.svg" width="50" alt="accept">
	</div>
</script>

