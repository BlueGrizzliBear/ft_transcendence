<!-- Template for new guild form -->
<script id="guildNewStatic" type="text/template">
	<p class="bandeau">Create a new guild</p>
	<form id="newGuildForm" name="newguilform">
		<div class="field">
			<label for="name">Name</label>
			<input type="text" id="name" name="name" required>
		</div>
		<div class="field">
			<label for="anagram">Anagram</label>
			<input type="text" id="anagram" name="anagram" required>
		</div>
		<div id="formSubmitNewGuild" class="actions">
			<a class="button cursorButton">Submit</a>
		</div>
	</form>
</script>

<!-- Template for guild Invites -->
<script id="guildInvitesTemplate" type="text/template">
	<p class="bandeau">Pending Invites</p>
	<div id="guildInvitesBody">
	</div>
</script>

<script id="guildInviteRow" type="text/template">
	<div class="guildInvitesRow">
		<div><%%= username %></div>
		<div><%%= mmr %></div>
		<div><%%= created_at %></div>
		<div id="<%%= accept %>" class="cursorButton">
			<img src="assets/tick_img.png" alt="accept">
		</div>
		<div id="<%%= refuse %>" class="cursorButton">
			<img src="assets/cross_img.png" alt="refuse">
		</div>
	</div>
</script>
